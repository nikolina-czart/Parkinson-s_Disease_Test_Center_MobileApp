    <!-- Base application theme. -->
    <style name="ParkinsonsDisease" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDarkMode</item>
        <item name="colorAccent">@color/colorAccentBright</item>
    </style>

    <style name="ParkinsonsDisease.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextInputTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/colorPrimaryDarkMode</item>
        <item name="colorAccent">@color/colorAccentBright</item>
        <item name="colorControlNormal">@color/colorPrimaryDarkMode</item>
        <item name="colorControlActivated">@color/colorAccentBright</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5px</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
